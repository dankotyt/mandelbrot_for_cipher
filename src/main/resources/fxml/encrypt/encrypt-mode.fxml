<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cipher.core.controller.encrypt.EncryptModeController"
            stylesheets="@../../css/styles.css"
            styleClass="main-container">

    <top>
        <BorderPane styleClass="encrypt-mode-top-container">
            <left>
                <HBox style="-fx-padding: 20 0 0 20;">
                    <Button fx:id="backButton" styleClass="icon-back-button"/>
                </HBox>
            </left>
            <center>
                <HBox alignment="CENTER" style="-fx-padding: 80 0 0 0;">
                    <Label text="Выберите изображение-ключ:"
                           styleClass="encrypt-mode-title"/>
                </HBox>
            </center>
        </BorderPane>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10" styleClass="encrypt-mode-center-container">
            <Region styleClass="space-below-title"/>
            <StackPane styleClass="encrypt-mode-content-container">
                <ImageView fx:id="imageView" fitWidth="640" fitHeight="480" translateX="150"/>
                <Region styleClass="dark-gray-rect-without-translate"/>
                <VBox alignment="CENTER" spacing="20" styleClass="button-container">
                    <Button fx:id="generateButton" text="Сгенерировать изображение-ключ"
                            styleClass="encrypt-mode-button"/>
                    <Button fx:id="manualButton" text="Ввести параметры ключа вручную"
                            styleClass="encrypt-mode-button"/>
                </VBox>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
