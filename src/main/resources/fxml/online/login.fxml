<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cipher.core.controller.online.LoginController"
            stylesheets="@../../css/styles.css"
            styleClass="main-container">

    <top>
        <BorderPane styleClass="login-top-container">
            <left>
                <HBox style="-fx-padding: 20 0 0 20;">
                    <Button fx:id="backButton" styleClass="icon-back-button"
                            onAction="#handleBack"/>
                </HBox>
            </left>
            <center>
                <VBox alignment="CENTER" style="-fx-padding: 40 0 30 0;">
                    <Label fx:id="titleLabel" text="Введите seed-фразу:"
                           styleClass="login-title"/>
                </VBox>
            </center>
        </BorderPane>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-center-container">
            <Region styleClass="space-below-title"/>
            <GridPane fx:id="wordsGrid"
                      styleClass="login-grid"
                      hgap="15"
                      vgap="15">
                <!-- Word fields will be populated dynamically -->
            </GridPane>

            <Button fx:id="confirmButton"
                    text="Подтвердить"
                    onAction="#handleConfirm"
                    styleClass="login-confirm-button"/>
        </VBox>
    </center>
</BorderPane>
