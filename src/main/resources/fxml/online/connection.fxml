<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cipher.core.controller.online.ConnectionPanelController"
            stylesheets="@../../css/styles.css"
            styleClass="main-container">

    <top>
        <BorderPane>
            <left>
                <HBox style="-fx-padding: 20 0 0 20;">
                    <Button fx:id="backButton" styleClass="icon-back-button"/>
                </HBox>
            </left>
            <center>
                <VBox alignment="CENTER" style="-fx-padding: 80 0 0 0;">
                    <Label fx:id="titleLabel" text="Выберите желаемое действие:"
                           styleClass="connection-title"/>
                    <Region prefHeight="100"/>
                </VBox>
            </center>
        </BorderPane>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="registrationButton" text="Регистрация"
                    styleClass="connection-button"/>
            <Region prefWidth="100"/>
            <Button fx:id="loginButton" text="Авторизация"
                    styleClass="connection-button"/>
        </HBox>
    </center>
</BorderPane>
